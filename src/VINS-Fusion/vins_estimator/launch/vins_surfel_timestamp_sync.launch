<launch>
    <!-- VINS-Surfel 时间戳同步节点 -->
    <node pkg="vins" type="vins_surfel_timestamp_synchronizer" name="vins_surfel_timestamp_synchronizer" output="screen">
        
        <!-- 同步参数 -->
        <param name="sync_tolerance" value="0.01"/>          <!-- 图像同步容错：10ms -->
        <param name="imu_sync_tolerance" value="0.005"/>     <!-- IMU同步容错：5ms -->
        <param name="max_buffer_size" value="200"/>          <!-- 最大缓冲区大小 -->
        
        <!-- 启用/禁用特定传感器的同步 -->
        <param name="enable_color" value="true"/>            <!-- 彩色图像 -->
        <param name="enable_depth" value="true"/>            <!-- 深度图像 -->
        <param name="enable_infra" value="true"/>            <!-- 红外图像 -->
        <param name="enable_imu_sync" value="true"/>         <!-- IMU数据 -->
        
        <!-- 输入话题重映射 -->
        <remap from="/camera/color/image_raw" to="/camera/color/image_raw"/>
        <remap from="/camera/aligned_depth_to_color/image_raw" to="/camera/aligned_depth_to_color/image_raw"/>
        <remap from="/camera/infra1/image_rect_raw" to="/camera/infra1/image_rect_raw"/>
        <remap from="/camera/infra2/image_rect_raw" to="/camera/infra2/image_rect_raw"/>
        <remap from="/camera/imu" to="/camera/imu"/>
        <remap from="/vins_estimator/odometry" to="/vins_estimator/odometry"/>
        
        <!-- 输出话题重映射 -->
        <remap from="/camera/color/image_raw_sync" to="/camera/color/image_raw_sync"/>
        <remap from="/camera/aligned_depth_to_color/image_raw_sync" to="/camera/aligned_depth_to_color/image_raw_sync"/>
        <remap from="/camera/infra1/image_rect_raw_sync" to="/camera/infra1/image_rect_raw_sync"/>
        <remap from="/camera/infra2/image_rect_raw_sync" to="/camera/infra2/image_rect_raw_sync"/>
        <remap from="/camera/imu_sync" to="/camera/imu_sync"/>
        
    </node>
</launch>
