<launch>
    <!-- 图像时间戳同步节点 -->
    <node pkg="vins" type="image_timestamp_synchronizer" name="image_timestamp_synchronizer" output="screen">
        <!-- 同步容错时间（秒） -->
        <param name="sync_tolerance" value="0.05"/>
        <!-- 最大缓冲区大小 -->
        <param name="max_buffer_size" value="100"/>
        
        <!-- 重映射输入话题 -->
        <remap from="/camera_rgbd/color/image_raw" to="/camera_rgbd/color/image_raw"/>
        <remap from="/camera_rgbd/aligned_depth_to_color/image_raw" to="/camera_rgbd/aligned_depth_to_color/image_raw"/>
        <remap from="/vins_estimator/path" to="/vins_estimator/path"/>
        
        <!-- 重映射输出话题 -->
        <remap from="/camera_rgbd/color/image_raw_sync" to="/camera_rgbd/color/image_raw_sync"/>
        <remap from="/camera_rgbd/aligned_depth_to_color/image_raw_sync" to="/camera_rgbd/aligned_depth_to_color/image_raw_sync"/>
    </node>
</launch>
